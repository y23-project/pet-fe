{
  "compilerOptions": {
    "module": "ES6",
    "target": "es2017",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "dist", ".next", ".cache", "bundles", "out"],
  "include": ["pages/**/*", "src/**/*"],
  "rules": {
    "react/prop-types": "off"
  }
}
